<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gwanghwamunPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.nseoul.InGwanghwamun">
    <!--NSeoul 메뉴바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6"
        android:orientation="horizontal"
        >
        <!--백버튼-->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:background="@drawable/iconback3"
            android:onClick="btnBackClicked" />
        <!--서울시티투어-->
        <Button
            android:id="@+id/btnBus"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="85"
            android:onClick="btnBusClicked" />
    </LinearLayout>
    <!--여백 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />
    <!--화면 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="92"
        android:gravity="center"
        android:orientation="vertical">
        <!--사진 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="34"
            android:gravity="center"
            android:orientation="horizontal">
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
            <!--사진-->
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="94" />
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
        <!--여백 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_gravity="center" />
        <!--사진 버튼 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="horizontal">
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
            <Button
                android:id="@+id/btn01"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="23.5"
                android:onClick="btn01Clicked" />
            <Button
                android:id="@+id/btn02"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="23.5"
                android:onClick="btn02Clicked" />
            <Button
                android:id="@+id/btn03"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="23.5"
                android:onClick="btn03Clicked" />
            <Button
                android:id="@+id/btn04"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="23.5"
                android:onClick="btn04Clicked" />
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
        <!--여백 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_gravity="center" />
        <!--명소 이름 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
            <!--사진-->
            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="94" />
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
        <!--여백 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_gravity="center" />
        <!--날씨 지도 언어 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="4.5"
            android:gravity="center"
            android:orientation="horizontal">
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
            <Button
                android:id="@+id/btnweather"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="32"
                android:onClick="btnweatherClicked" />
            <Button
                android:id="@+id/btnmap"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="32"
                android:onClick="btnmapClicked" />
            <Button
                android:id="@+id/btnkor"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="15"
                android:onClick="btnkorClicked" />
            <Button
                android:id="@+id/btneng"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="15"
                android:onClick="btnengClicked" />
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
        <!--흰 라인 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
            <!--흰 라인-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="94"
                android:background="#ffffff" />
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
        <!--소개 레이아웃-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="19.6"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="19.6"
                android:gravity="center"
                android:orientation="horizontal">
                <!--여백-->
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />
                <!--사진-->
                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_weight="94" />
                <!--여백-->
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />
            </LinearLayout>
        </ScrollView>
        <!--흰 라인 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
            <!--흰 라인-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="94"
                android:background="#ffffff" />
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
        <!--지하철 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="11.5"
            android:layout_gravity="center" >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
            <!--사진-->
            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="94" />
            <!--여백-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
        <!--하단 여백 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txtType"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#0F0329"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
